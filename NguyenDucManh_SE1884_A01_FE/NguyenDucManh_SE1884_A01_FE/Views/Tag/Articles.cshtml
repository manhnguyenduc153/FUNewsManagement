@using Assignmen_PRN232__.Dto
@model List<NewsArticleDto>

@{
    ViewData["Title"] = $"Articles with Tag: {ViewBag.TagName}";
    var tagName = ViewBag.TagName ?? "Unknown";
    var tagId = ViewBag.TagId ?? 0;
}

<div class="container mt-4">
    <!-- Header -->
    <div class="row mb-4">
        <div class="col-md-8">
            <h2>Articles with Tag: <span class="badge bg-info text-dark">@tagName</span></h2>
        </div>
        <div class="col-md-4 text-end">
            <a asp-action="Index" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> Back to Tags
            </a>
        </div>
    </div>

    <!-- Articles List -->
    <div class="card">
        <div class="card-header bg-primary text-white">
            <h5 class="mb-0">@Model.Count Article(s) Found</h5>
        </div>
        <div class="card-body p-0">
            @if (Model != null && Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover table-striped mb-0">
                        <thead class="table-light">
                            <tr>
                                <th style="width: 8%">ID</th>
                                <th style="width: 30%">Title</th>
                                <th style="width: 15%">Category</th>
                                <th style="width: 15%">Author</th>
                                <th style="width: 12%">Created Date</th>
                                <th style="width: 10%">Status</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var article in Model)
                            {
                                <tr>
                                    <td>@article.NewsArticleId</td>
                                    <td>
                                        <strong>@article.NewsTitle</strong>
                                    </td>
                                    <td>
                                        <span class="badge bg-secondary">@(article.CategoryName ?? "N/A")</span>
                                    </td>
                                    <td>@(article.CreatedByName ?? "N/A")</td>
                                    <td>@(article.CreatedDate?.ToString("dd/MM/yyyy") ?? "N/A")</td>
                                    <td>
                                        @if (article.NewsStatus == true)
                                        {
                                            <span class="badge bg-success">Active</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-danger">Inactive</span>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="text-center py-5">
                    <i class="bi bi-inbox" style="font-size: 3rem; color: #ccc;"></i>
                    <p class="text-muted mt-3">No articles found with this tag</p>
                </div>
            }
        </div>
    </div>
</div>
