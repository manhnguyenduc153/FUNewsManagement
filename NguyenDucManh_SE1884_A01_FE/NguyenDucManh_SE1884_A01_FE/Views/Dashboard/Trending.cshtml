@model List<Assignmen_PRN232__.Dto.TrendingArticleDto>
@using Assignmen_PRN232__.Dto

@{
    ViewData["PageTitle"] = "Trending Articles";
    var filter = ViewBag.Filter as AnalyticsFilterDto ?? new AnalyticsFilterDto();
}

<div class="container-fluid mt-4">
    <div class="row mb-4">
        <div class="col-md-6">
            <h2><i class="bi bi-graph-up-arrow"></i> Trending Articles</h2>
        </div>
        <div class="col-md-6 text-end">
            <form asp-action="Export" method="get" style="display:inline;">
                <input type="hidden" name="top" value="@filter.Top" />
                <input type="hidden" name="fromDate" value="@filter.FromDate?.ToString("yyyy-MM-dd")" />
                <input type="hidden" name="toDate" value="@filter.ToDate?.ToString("yyyy-MM-dd")" />
                <input type="hidden" name="categoryId" value="@filter.CategoryId" />
                <input type="hidden" name="authorId" value="@filter.AuthorId" />
                <button type="submit" class="btn btn-success">
                    <i class="bi bi-download"></i> Export CSV
                </button>
            </form>
        </div>
    </div>

    <div class="card mb-4">
        <div class="card-body">
            <form asp-action="Trending" method="get" class="row g-3">
                <div class="col-md-2">
                    <label class="form-label">Top</label>
                    <input type="number" name="top" value="@filter.Top" class="form-control" min="1" max="100">
                </div>
                <div class="col-md-3">
                    <label class="form-label">From Date</label>
                    <input type="date" name="fromDate" value="@filter.FromDate?.ToString("yyyy-MM-dd")" class="form-control">
                </div>
                <div class="col-md-3">
                    <label class="form-label">To Date</label>
                    <input type="date" name="toDate" value="@filter.ToDate?.ToString("yyyy-MM-dd")" class="form-control">
                </div>
                <div class="col-md-4 d-flex align-items-end">
                    <button type="submit" class="btn btn-primary me-2">
                        <i class="bi bi-search"></i> Search
                    </button>
                    <a asp-action="Trending" class="btn btn-secondary">
                        <i class="bi bi-arrow-counterclockwise"></i> Reset
                    </a>
                </div>
            </form>
        </div>
    </div>

    <div class="card">
        <div class="card-header bg-primary text-white">
            <h5 class="mb-0">Top @filter.Top Articles by Views</h5>
        </div>
        <div class="card-body p-0">
            @if (Model != null && Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead class="table-light">
                            <tr>
                                <th>#</th>
                                <th>Title</th>
                                <th>Category</th>
                                <th>Author</th>
                                <th>Views</th>
                                <th>Created Date</th>
                            </tr>
                        </thead>
                        <tbody>
                            @for (int i = 0; i < Model.Count; i++)
                            {
                                var item = Model[i];
                                <tr>
                                    <td><strong>@(i + 1)</strong></td>
                                    <td>@item.NewsTitle</td>
                                    <td><span class="badge bg-info">@item.CategoryName</span></td>
                                    <td>@item.AuthorName</td>
                                    <td><span class="badge bg-success">@item.ViewCount views</span></td>
                                    <td>@item.CreatedDate?.ToString("dd/MM/yyyy")</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="text-center py-5">
                    <i class="bi bi-inbox" style="font-size: 3rem; color: #ccc;"></i>
                    <p class="text-muted mt-3">No trending articles found</p>
                </div>
            }
        </div>
    </div>
</div>
